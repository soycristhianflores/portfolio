</style>
<script>
	// Al hacer click en "Ver más"
	document.querySelectorAll('.load-more').forEach(button => {
	  button.addEventListener('click', function() {
		const section = this.closest('.portfolio-section');
		const grid = section.querySelector('.portfolio-grid');
		// Selecciona las tarjetas toggleable que estén ocultas
		const hiddenCards = grid.querySelectorAll('.toggleable.hide');
		
		hiddenCards.forEach(card => {
		  card.classList.remove('hide');
		  card.classList.add('show');
		});
		
		// Oculta el botón "Ver más" y muestra el "Ver menos" mediante clases
		this.classList.add('hidden');
		const loadLessButton = section.querySelector('.load-less');
		loadLessButton.classList.remove('hidden');
	  });
	});
	
	// Al hacer click en "Ver menos"
	document.querySelectorAll('.load-less').forEach(button => {
	  button.addEventListener('click', function() {
		const section = this.closest('.portfolio-section');
		const grid = section.querySelector('.portfolio-grid');
		// Selecciona todas las tarjetas toggleable
		const toggleableCards = grid.querySelectorAll('.toggleable');
		
		toggleableCards.forEach(card => {
		  card.classList.add('hide');
		  card.classList.remove('show');
		});
		
		// Oculta el botón "Ver menos" y muestra el "Ver más"
		this.classList.add('hidden');
		const loadMoreButton = section.querySelector('.load-more');
		loadMoreButton.classList.remove('hidden');
	  });
	});
  </script>
   