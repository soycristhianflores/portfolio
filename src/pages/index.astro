	transform: translateY(0);
	max-height: 1000px; /* Valor suficientemente grande para mostrar el contenido */
	margin-bottom: 1rem;
	overflow: hidden;
	transition: opacity 0.5s ease, transform 0.5s ease, max-height 0.5s ease, margin 0.5s ease;
	}

	/* Estado oculto: se oculta, se desplaza y colapsa */
	.project-card.hide {
	opacity: 0;
	transform: translateY(20px);
	max-height: 0;
	margin-bottom: 0;
	pointer-events: none;
	}

	/* Estado visible explícito */
	.project-card.show {
	opacity: 1;
	transform: translateY(0);
	max-height: 1000px;
	margin-bottom: 1rem;
	}

