/* Contenedor de botones: se establece posición relativa y una altura fija */
.load-buttons {
  position: relative;
  height: 3rem;  /* Puedes ajustar este valor según el alto de tus botones */
  margin-top: 2rem;
}

/* Estilos comunes para ambos botones */
.load-buttons button {
  position: absolute;
  left: 50%;
  transform: translateX(-50%) translateY(0);
  opacity: 1;
  transition: opacity 0.5s ease, transform 0.5s ease;
  padding: 1rem 2rem;
  background-color: #7B68EE;
  color: white;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  font-size: 1.1rem;
}

/* Estado oculto: el botón se desplaza ligeramente hacia abajo, se hace transparente y no responde a eventos */
.load-buttons button.hidden {
  opacity: 0;
  transform: translateX(-50%) translateY(10px);
  pointer-events: none;
}

/* Hover para ambos botones */
.load-buttons button:hover {
  background-color: #6b5ecd;
}


	.portfolio-grid > .load-buttons {
	grid-column: 1 / -1;
	}

	.load-more, .load-less {
		padding: 1rem 2rem;
